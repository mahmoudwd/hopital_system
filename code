#include <iostream>
using namespace std;
const int Max_Specializations = 20;
const int spots = 5;
string names[Max_Specializations][spots];
int status[Max_Specializations][spots];
int length[Max_Specializations];
int menu() {
	int choice = -1;
	while (choice == -1) {
		cout << "Enter Your choice: \n";
		cout << "1) Add new patient\n";
		cout << "2) Print all patients\n";
		cout << "3) Get next patient\n";
		cout << "4) Exit\n";
		cin >> choice;
		if (choice < 1 || choice > 4) {
			cout << "Invalid choice Try again\n";
			choice = -1;
		}
	}
	return choice;
}
void shift_right(int spec) {
	int len = spec;
	for (int i = len - 1; i >= 0; i--) {
		names[spec][i + 1] = names[spec][i];
		status[spec][i + 1] = status[spec][i];
	}
}
void shift_lift(int spec) {
	int len = spec;
	for (int i = 1; i < len; i++) {
		names[spec][i - 1] = names[spec][i];
		status[spec][i - 1] = status[spec][i];
	}
}
bool add_patients() {
	int spec,st;
	string name;
	cout<< "Enter specialization, name, statis: ";
	cin >> spec >> name >> st;
	int pot = length[spec];
	if (pot > spots) {
		cout<< "Sorry we can't add more patients for the specialization\n";
		return false;
	}
	if (st == 0) {
		names[spec][pot] = name;
		status[spec][pot] = st;
		length[spec]++;
	}
	else {
		shift_right(spec);
		names[spec][0] = name;
		status[spec][0] = st;
		length[spec]++;
	}
	return true;
}
void print_patient(int spec) {
	int len = length[spec];
	if (len == 0) {
		return;
	}
	else {
		cout << "there are " << len << " patients at the specialization " << spec << "\n";
		for (int i = 0; i < len; i++) {
			cout << names[spec][i] << " ";
			if (status[spec][i]) {
				cout << "urgent\n";
			}
			else {
				cout << "regular\n";
			}
		}
	}
}
void print_patients() {
	cout << "=========================================\n";
	for (int spec = 0; spec < Max_Specializations; spec++) {
		print_patient(spec);
	}
}
void get_patient() {
	int spec;
	cout << "Enter specialization: ";
	cin >> spec;
	int len = length[spec];
	if (len == 0) {
		cout << "No patients at the moment\n";
	}
	else {
		cout << names[spec][0] << " Please go with the Dr\n";
		shift_lift(spec);
		length[spec]--;
	}
}
void hospital_system() {
	while (true)
	{
		int choice = menu();
		if (choice == 1) {
			add_patients();
		}
		else if (choice == 2) {
			print_patients();
		}
		else if (choice == 3) {
			get_patient();
		}
		else {
			break;
		}
	}
}
int main() {
	hospital_system();
	return 0;
}
